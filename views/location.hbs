<h1> Oops, looks like you didn't enter a key! How about we use your location to generate one for you? </h1>
<h2> Click on "Get Location" and simply copy and paste the autogenerated key into the form! </h2>
<p><button onclick="geoFindMe()">Get location</button></p>
<div id="out"></div>


<!-- This script was taken from an online source
 -->
 <script type="text/javascript">
	function geoFindMe() {
	  var output = document.getElementById("out");

	  if (!navigator.geolocation){
	    output.innerHTML = "<p>Geolocation is not supported by your browser</p>";
	    return;
	  }

	  function success(position) {
	    var latitude  = position.coords.latitude;
	    var longitude = position.coords.longitude;
	    var key = Math.abs(Math.floor((longitude+latitude)%26))

	    output.innerHTML = '<p>Latitude is ' + latitude + '° <br>Longitude is ' + longitude + '°</p>'+ '<br><h2> Your key is: ' + key + '°</h2>;'

	    var img = new Image();
	    img.src = "https://maps.googleapis.com/maps/api/staticmap?center=" + latitude + "," + longitude + "&zoom=13&size=300x300&sensor=false";


	    output.appendChild(img);
	  }

	  function error() {
	    output.innerHTML = "Unable to retrieve your location";
	  }

	  output.innerHTML = "<p>Locating…</p>";

	  navigator.geolocation.getCurrentPosition(success, error);
	}
</script>
